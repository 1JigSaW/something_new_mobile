# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

platform :ios, '15.1'
prepare_react_native_project!

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'something_new_mobile' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  # Enable modular headers only for GoogleUtilities to satisfy FirebaseCoreInternal Swift import
  pod 'GoogleUtilities', :modular_headers => true

  # Explicit Firebase pods to resolve "Module 'FirebaseCore' not found" in FirebaseInstallations
  pod 'FirebaseCore', '12.3.0', :modular_headers => true
  pod 'FirebaseCoreInternal', '12.3.0', :modular_headers => true
  pod 'FirebaseInstallations', '12.3.0', :modular_headers => true

  # RNWorklets подтянется автоматически из пакета `react-native-worklets` через autolinking

  post_install do |installer|
    # https://github.com/facebook/react-native/blob/main/packages/react-native/scripts/react_native_pods.rb#L197-L202
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )
    installer.pods_project.targets.each do |t|
      t.build_configurations.each do |config|
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.1'
        paths = config.build_settings['HEADER_SEARCH_PATHS'] || ['$(inherited)']
        unless paths.is_a?(Array)
          paths = [paths]
        end
        unless paths.include?('$(SRCROOT)/../node_modules/react-native/ReactCommon/**')
          paths << '$(SRCROOT)/../node_modules/react-native/ReactCommon/**'
        end
        config.build_settings['HEADER_SEARCH_PATHS'] = paths
      end
    end
  end
end
